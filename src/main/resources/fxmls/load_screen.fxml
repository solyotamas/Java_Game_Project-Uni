<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" styleClass="background" stylesheets="@../css/loadSave.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="classes.SceneController">
    <children>
        <!-- Load Game Label -->
        <Label fx:id="diffLabel" layoutX="729.0" layoutY="111.0" text="Load Game" textAlignment="CENTER" textFill="WHITE">
            <effect>
                <DropShadow blurType="ONE_PASS_BOX" height="20.0" radius="9.5" spread="1.0" width="20.0">
                    <color>
                        <Color red="0.24313725531101227" green="0.1411764770746231" blue="0.08235294371843338" />
                    </color>
                </DropShadow>
            </effect>
        </Label>

        <Button layoutX="1162.0" layoutY="867.0" mnemonicParsing="false" prefHeight="76.0" prefWidth="198.0" text="" textFill="WHITE">
            <graphic>
                <Text fill="WHITE" text="Start">
                    <effect>
                        <DropShadow blurType="ONE_PASS_BOX" height="20.0" radius="9.5" spread="1.0" width="16.0">
                            <color>
                                <Color red="0.24313725531101227" green="0.1411764770746231" blue="0.08235294371843338" />
                            </color>
                        </DropShadow>
                    </effect>
                </Text>
            </graphic>
        </Button>

        <Button layoutX="562.0" layoutY="867.0" mnemonicParsing="false" onAction="#switchToMain" prefHeight="76.0" prefWidth="198.0" text="" textFill="WHITE">
            <graphic>
                <Text fill="WHITE" text="Back">
                    <effect>
                        <DropShadow blurType="ONE_PASS_BOX" height="20.0" radius="9.5" spread="1.0" width="16.0">
                            <color>
                                <Color red="0.24313725531101227" green="0.1411764770746231" blue="0.08235294371843338" />
                            </color>
                        </DropShadow>
                    </effect>
                </Text>
            </graphic>
        </Button>
      <ListView fx:id="saveListView" layoutX="413.0" layoutY="243.0" prefHeight="594.0" prefWidth="1095.0" />
    </children>
</AnchorPane>
