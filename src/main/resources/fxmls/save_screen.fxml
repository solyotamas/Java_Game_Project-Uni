<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" styleClass="background" stylesheets="@../css/load_screen.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="classes.controllers.ScreenController">
    <children>
        <!-- Load Game Label -->
        <Label fx:id="diffLabel" layoutX="725.0" layoutY="115.0" text="Save Game" textFill="WHITE">
            <effect>
                <DropShadow blurType="ONE_PASS_BOX" height="20.0" radius="9.5" spread="1.0" width="20.0">
                    <color>
                        <Color red="0.24313725531101227" green="0.1411764770746231" blue="0.08235294371843338" />
                    </color>
                </DropShadow>
            </effect>
         <font>
            <Font name="Franklin Gothic Demi" size="96.0" />
         </font>
        </Label>

        <Button layoutX="1157.0" layoutY="869.0" mnemonicParsing="false" prefHeight="76.0" prefWidth="198.0" text="" textFill="WHITE">
            <graphic>
                <Text fill="WHITE" text="Save">
                    <effect>
                        <DropShadow blurType="ONE_PASS_BOX" height="20.0" radius="9.5" spread="1.0" width="16.0">
                            <color>
                                <Color red="0.24313725531101227" green="0.1411764770746231" blue="0.08235294371843338" />
                            </color>
                        </DropShadow>
                    </effect>
               <font>
                  <Font name="Franklin Gothic Demi" size="42.0" />
               </font>
                </Text>
            </graphic>
        </Button>

        <Button layoutX="567.0" layoutY="869.0" mnemonicParsing="false" onAction="#switchToGame" prefHeight="76.0" prefWidth="198.0" text="" textFill="WHITE">
            <graphic>
                <Text fill="WHITE" text="Back">
                    <effect>
                        <DropShadow blurType="ONE_PASS_BOX" height="20.0" radius="9.5" spread="1.0" width="16.0">
                            <color>
                                <Color red="0.24313725531101227" green="0.1411764770746231" blue="0.08235294371843338" />
                            </color>
                        </DropShadow>
                    </effect>
               <font>
                  <Font name="Franklin Gothic Demi" size="42.0" />
               </font>
                </Text>
            </graphic>
        </Button>
      <TextField layoutX="420.0" layoutY="390.0" prefHeight="48.0" prefWidth="1080.0" promptText="game" style="-fx-background-radius: 10px;">
         <font>
            <Font name="Calibri" size="24.0" />
         </font></TextField>
      <Label layoutX="420.0" layoutY="358.0" text="Save Game" textFill="#3e2415">
         <font>
            <Font name="Calibri" size="24.0" />
         </font>
      </Label>
      <Pane id="saveTaken" fx:id="saveTaken" layoutX="683.0" layoutY="388.0" prefHeight="261.0" prefWidth="533.0" visible="false">
         <children>
            <Label layoutX="59.0" layoutY="24.0" prefHeight="112.0" prefWidth="416.0" style="-fx-wrap-text: true;" text="This save name is taken. Do you want to overwrite the existing one?" textAlignment="CENTER" textFill="#683d26" wrapText="true">
               <font>
                  <Font name="Calibri Bold" size="28.0" />
               </font>
            </Label>
            <Button layoutX="86.0" layoutY="152.0" mnemonicParsing="false" prefHeight="76.0" prefWidth="150.0" text="" textFill="WHITE">
               <graphic>
                  <Text fill="WHITE" text="No">
                     <effect>
                        <DropShadow blurType="ONE_PASS_BOX" height="20.0" radius="9.5" spread="1.0" width="16.0">
                           <color>
                              <Color red="0.24313725531101227" green="0.1411764770746231" blue="0.08235294371843338" />
                           </color>
                        </DropShadow>
                     </effect>
                     <font>
                        <Font name="Franklin Gothic Demi" size="42.0" />
                     </font>
                  </Text>
               </graphic>
            </Button>
            <Button id="yesBtn" layoutX="298.0" layoutY="152.0" mnemonicParsing="false" prefHeight="76.0" prefWidth="150.0" text="" textFill="WHITE">
               <graphic>
                  <Text fill="WHITE" text="Yes">
                     <font>
                        <Font name="Franklin Gothic Demi" size="42.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="ONE_PASS_BOX" height="18.0" radius="8.0" spread="1.0" width="16.0">
                           <color>
                              <Color red="0.5333333611488342" green="0.4431372582912445" blue="0.003921568859368563" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Text>
               </graphic>
            </Button>
         </children>
      </Pane>
    </children>
</AnchorPane>
