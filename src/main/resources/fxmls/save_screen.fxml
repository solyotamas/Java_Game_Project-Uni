<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" styleClass="background" stylesheets="@../css/load_screen.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="classes.controllers.ScreenController">
    <children>
        <!-- Load Game Label -->
        <Label fx:id="diffLabel" layoutX="729.0" layoutY="111.0" text="Save Game" textFill="WHITE">
            <effect>
                <DropShadow blurType="ONE_PASS_BOX" height="20.0" radius="9.5" spread="1.0" width="20.0">
                    <color>
                        <Color red="0.24313725531101227" green="0.1411764770746231" blue="0.08235294371843338" />
                    </color>
                </DropShadow>
            </effect>
        </Label>

        <Button layoutX="1152.0" layoutY="867.0" mnemonicParsing="false" prefHeight="76.0" prefWidth="226.0" text="" textFill="WHITE">
            <graphic>
                <Text fill="WHITE" text="Save game">
                    <effect>
                        <DropShadow blurType="ONE_PASS_BOX" height="20.0" radius="9.5" spread="1.0" width="16.0">
                            <color>
                                <Color red="0.24313725531101227" green="0.1411764770746231" blue="0.08235294371843338" />
                            </color>
                        </DropShadow>
                    </effect>
                </Text>
            </graphic>
        </Button>

        <Button layoutX="562.0" layoutY="867.0" mnemonicParsing="false" onAction="#goBack" prefHeight="76.0" prefWidth="198.0" text="" textFill="WHITE">
            <graphic>
                <Text fill="WHITE" text="Back">
                    <effect>
                        <DropShadow blurType="ONE_PASS_BOX" height="20.0" radius="9.5" spread="1.0" width="16.0">
                            <color>
                                <Color red="0.24313725531101227" green="0.1411764770746231" blue="0.08235294371843338" />
                            </color>
                        </DropShadow>
                    </effect>
                </Text>
            </graphic>
        </Button>
      <TextField layoutX="420.0" layoutY="390.0" prefHeight="48.0" prefWidth="1080.0" promptText="game" style="-fx-background-radius: 10px;">
         <font>
            <Font name="Calibri" size="24.0" />
         </font></TextField>
      <Label layoutX="420.0" layoutY="358.0" text="Save Game" textFill="#3e2415">
         <font>
            <Font name="Calibri" size="24.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
